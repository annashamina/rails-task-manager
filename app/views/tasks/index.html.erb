<h2> My Tasks: </h2>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), class: "delete_action",
    method: :delete,
    data: { confirm: "Are you sure you want to delete #{task.title} ?" } %></li> 
  <% end %>
</ul>

<%= link_to "+ Add a New Task", task_new_path %>

